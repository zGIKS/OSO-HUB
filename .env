# Hosts de Cassandra en Azure (IPs públicas de las VMs, separadas por coma para pruebas locales)
CASSANDRA_HOST=20.253.215.243:9042,20.245.208.60:9042,52.241.168.23:9042

# Keyspace a usar (debe existir en Cassandra local o Astra, para 3 nodos usa replication_factor: 3)
CASSANDRA_KEYSPACE=osohub

# Puerto donde corre tu API
PORT=8080

# Secreto JWT (asegúrate de tener algo largo y seguro)
JWT_SECRET=change_this_to_a_long_random_secret

# Modo de conexión: "local" para Cassandra local, "astra" para Astra DB
CASSANDRA_MODE=astra

# Lista de proxies confiables para Gin (separados por coma)
TRUSTED_PROXIES=127.0.0.1

# Gin mode: "debug" for development, "release" for production
GIN_MODE=debug

